<%= render layout: 'frame' do %>

  <div id="main">
    <div class="page-header">
      <h3>Article List</h3>
    </div>
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <td>Title</td>
          <td>Content</td>
          <td>
            Action
          </td>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td>
              <%= article.title %>
            </td>
            <td>
              <%= truncate(article.content, :length => 230, :omission => "" , :escape => false)%>
            </td>
            <td>
              <%= link_to "View", admin_article_path(article.id), :class => "btn default" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>




<% end %>
